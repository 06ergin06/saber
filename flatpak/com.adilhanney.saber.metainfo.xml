<component type="desktop-application">
    <id>com.adilhanney.saber</id>

    <name>Saber: Handwritten Notes</name>
    <summary>A cross-platform libre handwritten notes app.</summary>

    <developer_name>Adil Hanney</developer_name>
    <url type="homepage">https://github.com/adil192/saber</url>

    <metadata_license>MIT</metadata_license>
    <project_license>GPL-3.0-only</project_license>

    <supports>
        <control>pointing</control>
        <control>keyboard</control>
        <control>touch</control>
        <control>tablet</control>
    </supports>

    <recommends>
        <internet>always</internet>
    </recommends>

    <description>
        <p>A cross-platform libre handwritten notes app, available for Android, iOS, Linux, Windows, and the web!</p>
    </description>

    <launchable type="desktop-id">com.adilhanney.saber.desktop</launchable>

    <content_rating type="oars-1.1" />

    <categories>
        <category>Education</category>
        <category>Graphics</category>
        <category>Office</category>
    </categories>

    <keywords>
        <keyword>cross-platform</keyword>
        <keyword>handwritten</keyword>
        <keyword>notes</keyword>
    </keywords>

    <screenshots>
        <screenshot type="default">
            <image>https://raw.githubusercontent.com/adil192/saber/main/assets/screenshots/home-desktop.png</image>
        </screenshot>
        <screenshot>
            <image>https://raw.githubusercontent.com/adil192/saber/main/assets/screenshots/editor-desktop.png</image>
        </screenshot>
        <screenshot>
            <image>https://raw.githubusercontent.com/adil192/saber/main/assets/screenshots/login-desktop.png</image>
        </screenshot>
    </screenshots>

    <releases>
        <release version="0.3.2" type="development" date="2022-09-07">
            <description>
                <p>1. Fix crash in the editor for new users</p>
            </description>
        </release>
        <release version="0.3.1" type="development" date="2022-09-06">
            <description>
                <p>1. Support for macOS</p>
                <p>2. Pen color doesn't reset to black every time, but remembers your last used color</p>
                <p>3. Fixed how recently accessed files are recorded</p>
            </description>
        </release>
        <release version="0.3.0" type="development" date="2022-09-05">
            <description>
                <p>1. Use separate passwords for Nextcloud and encryption. This prevents your Nextcloud provider knowing your encryption key.</p>
            </description>
        </release>
        <release version="0.2.3" type="development" date="2022-09-03">
            <description>
                <p>1. Stop the syncing indicator infinitely looping if logged out</p>
                <p>2. Support Ctrl-Z and Ctrl-Y keyboard shortcuts</p>
                <p>3. Various flatpak tweaks</p>
            </description>
        </release>
        <release version="0.2.2" type="development" date="2022-09-02">
            <description>
                <p>1. Linux theming now works properly</p>
                <p>2. Home screen shows syncing progress, and a resync can be manually triggered by pressing the sync button in the corner</p>
                <p>3. Syncing is improved under the hood: the latest version of a note is prioritized rather than accidentally overwriting it if you make changes on two devices</p>
            </description>
        </release>
    </releases>
</component>
